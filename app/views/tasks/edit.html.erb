<html>
	<h1>
		Edit Task
	</h1>
	<br/>
	<div>
	<%= form_for @task, url: {action: "update"} do |t| %>
		Name: <%= t.text_field :name %><br/> <br/>
		Details: <%= t.text_field :details %><br/> <br/>
		Private: <%= t.radio_button(:access_control,'private') %>
		Public: <%= t.radio_button(:access_control, 'public') %><br/> <br/>
		<%= t.submit class:'button' %>
	<%end%>
	</div>
</html>